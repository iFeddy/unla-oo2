<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 5.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-5.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/bd_cuidar?useTimeZone=true&amp;serverTimezone=UTC</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>
		<property name="connection.pool_size">1</property>
		<property name="connection.verify-server-certificate">false</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">false</property>
		<!--<mapping resource="mapeos/Test.hbm.xml" />-->
		<mapping resource="mapeos/Persona.hbm.xml" />
		<mapping resource="mapeos/Rodado.hbm.xml" />
		<mapping resource="mapeos/Permiso.hbm.xml" />
		<mapping resource="mapeos/Lugar.hbm.xml" />
</session-factory>
</hibernate-configuration>